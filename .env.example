# Holo 1.5 API - Environment Variables Configuration
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to git!

# ==== Model Configuration ====
HOLO_MODEL=Hcompany/Holo1.5-7B
HOLO_MAX_SIDE=1440

# ==== Server Configuration ====
HOLO_HOST=127.0.0.1
HOLO_PORT=8000
UVICORN_WORKERS=1

# ==== Security - API Keys ====
API_KEYS_FILE=ops/api_keys.yaml

# ==== Security - Rate Limiting ====
RATE_LIMIT_IP=60/minute
RATE_LIMIT_KEY=120/minute
BURST_IP=10
BURST_KEY=20

# ==== Security - Request Limits ====
MAX_BODY_MB=10.0
MAX_IMAGE_SIDE=2048
MAX_TOKENS_LIMIT=2048

# ==== Security - CORS ====
# Comma-separated list of allowed origins
CORS_ALLOW_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ==== Security - Features ====
# Set to false in production to disable API documentation
ALLOW_DOCS=false

# ==== Security - Abuse Detection ====
DENYLIST_FILE=ops/denylist.txt
ABUSE_THRESHOLD_ERRORS=5
ABUSE_WINDOW_SECONDS=30

# ==== Logging ====
LOG_LEVEL=INFO
AUDIT_LOG_FILE=logs/audit.log

# ==== Proxy Configuration ====
# Set to true if behind reverse proxy (Caddy/Nginx)
TRUST_PROXY_HEADERS=true
TRUSTED_PROXY_COUNT=1

# ==== PyTorch Configuration ====
PYTORCH_ENABLE_MPS_FALLBACK=1
PYTORCH_MPS_HIGH_WATERMARK_RATIO=0.0
